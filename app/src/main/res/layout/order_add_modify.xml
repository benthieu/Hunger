<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:label="LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/backGround">

    <!--
    This listview will be created with a custom adapter
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/choose_table"
        android:id="@+id/order_add_modify_table_select"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/buttonsText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:background="@color/buttons"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="20dp"
            android:id="@+id/order_table_1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:background="@color/buttons"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="20dp"
            android:id="@+id/order_table_2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:background="@color/buttons"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="20dp"
            android:id="@+id/order_table_3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:background="@color/buttons"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="20dp"
            android:id="@+id/order_table_4" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:background="@color/buttons"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="20dp"
        android:id="@+id/order_table_5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:background="@color/buttons"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="20dp"
        android:id="@+id/order_table_6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:background="@color/buttons"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="20dp"
        android:id="@+id/order_table_7" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:background="@color/buttons"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="20dp"
        android:id="@+id/order_table_8" />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_product"
        android:id="@+id/order_add_product"
        android:background="@color/buttons"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_product_view"/>
</LinearLayout>
