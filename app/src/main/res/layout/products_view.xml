<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:label="LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/backGround">s
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="7dp">
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu #1"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button1" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu #2"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button2" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu #3"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="7dp">
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu #4"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button4" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert #1"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button5" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert #2"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="7dp">
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink #1"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button7" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink #2"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button8" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink #3"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="7dp"
        android:paddingBottom="30dp">
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink #4"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button10" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productAlc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink #5"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button11" />
        <Button
            android:layout_marginRight="5dp"
            android:background="@color/productAlc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink #6"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:width="120dp"
            android:id="@+id/button12" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/save_button"
        android:background="@color/buttons"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
